# select compression command and .tar extension based on TAR_COMP value
ifeq "$(TAR_COMP)" "bzip2"
TAR_COMP_CMD  = $(BZIP2_CMD)
TAR_COMP_EXT  = bz2
else ifeq "$(TAR_COMP)" "gzip"
