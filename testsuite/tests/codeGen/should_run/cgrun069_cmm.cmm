#define TEST_MEMCPY(ALIGN,SIZE)                                        \
    W_ size, src, dst, off, alignV;                                    \
    size = SIZE;                                                       \
    alignV = ALIGN;                                                    \
    ("ptr" src) = foreign "C" malloc(size);                            \
    ("ptr" dst) = foreign "C" malloc(size);                            \
    off = 0;                                                           \
init:                                                                  \
    if (off == size) {                                                 \
        goto init_end;                                                 \
    }                                                                  \
    bits8[src + off] = 0xaa;                                           \
    off = off + 1;                                                     \
    goto init;                                                         \
init_end:                                                              \
    prim %memcpy(dst, src, size, alignV);                              \
    off = 0;                                                           \
loop:                                                                  \
    if (off == size) {                                                 \
        goto loop_end;                                                 \
    }                                                                  \
    if (bits8[dst + off] != bits8[src + off]) {                        \
        foreign "C" printf(memcpyErr "ptr", ALIGN, SIZE);              \
        goto loop_end;                                                 \
    }                                                                  \
    off = off + 1;                                                     \
    goto loop;                                                         \
loop_end:                                                              \
   foreign "C" free(src);                                              \
   foreign "C" free(dst);                                              \
   return (0);

