let fileStore = [("T16804a.hs", lines t1), ("T16804b.hs", lines t2), ("T16804c.hs", lines t3)]

:{
custom c s e =
    let
        cmd = c ++ " " ++ s ++ maybe "" (" " ++) e
    in do
          putStrLn ""
          putStrLn ("% executing: \"" ++ cmd ++ "\"")
          putStrLn ("% file snippet:")
          putStr (annotateFile fileStore s)
          putStrLn "% output:"
          return cmd
:}

