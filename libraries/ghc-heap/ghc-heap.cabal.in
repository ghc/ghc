cabal-version:  3.0
name:           ghc-heap
version:        @ProjectVersionMunged@
license:        BSD-3-Clause
license-file:   LICENSE
maintainer:     libraries@haskell.org
bug-reports:    https://gitlab.haskell.org/ghc/ghc/issues/new
synopsis:       Functions for walking GHC's heap
category:       GHC
description:
    This package provides functions for walking the GHC heap data structures
    and retrieving information about those data structures.

build-type:     Simple
tested-with:    GHC==7.11

source-repository head
  type:     git
  location: https://gitlab.haskell.org/ghc/ghc.git
  subdir:   libraries/ghc-heap

library
  default-language: Haskell2010

  build-depends:    base             >= 4.9.0 && < 5.0
                  , rts              == 1.0.*
                  , containers       >= 0.6.2.1 && < 0.9

  build-depends:  ghc-internal >= @ProjectVersionForLib@.0 && < @ProjectVersionForLib@.99999

  ghc-options:      -Wall

  default-extensions: NoImplicitPrelude

  exposed-modules:  GHC.Exts.Heap
                    GHC.Exts.Heap.ClosureTypes
                    GHC.Exts.Heap.Utils
                    GHC.Exts.Heap.FFIClosures
                    GHC.Exts.Heap.FFIClosures_ProfilingDisabled
                    GHC.Exts.Heap.FFIClosures_ProfilingEnabled
                    GHC.Exts.Heap.ProfInfo.PeekProfInfo
                    GHC.Exts.Heap.ProfInfo.PeekProfInfo_ProfilingDisabled
                    GHC.Exts.Heap.ProfInfo.PeekProfInfo_ProfilingEnabled
                    GHC.Exts.Stack
  reexported-modules:
                    ghc-internal:GHC.Internal.Heap.Closures        as GHC.Exts.Heap.Closures,
                    ghc-internal:GHC.Internal.Heap.Constants       as GHC.Exts.Heap.Constants,
                    ghc-internal:GHC.Internal.Heap.InfoTable       as GHC.Exts.Heap.InfoTable,
                    ghc-internal:GHC.Internal.Heap.InfoTable.Types as GHC.Exts.Heap.InfoTable.Types,
                    ghc-internal:GHC.Internal.Heap.InfoTableProf   as GHC.Exts.Heap.InfoTableProf,
                    ghc-internal:GHC.Internal.Heap.ProfInfo.Types  as GHC.Exts.Heap.ProfInfo.Types,
                    ghc-internal:GHC.Internal.Stack.Constants      as GHC.Exts.Stack.Constants,
                    ghc-internal:GHC.Internal.Stack.Decode         as GHC.Exts.Stack.Decode,
