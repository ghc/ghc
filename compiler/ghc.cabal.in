        RecordWildCards
        ScopedTypeVariables
        StandaloneDeriving
        Trustworthy
        TupleSections
        TypeFamilies
        TypeSynonymInstances
        UnboxedTuples
        UndecidableInstances

    Include-Dirs: . parser utils

    -- We need to set the unit id to ghc (without a version number)
    -- as it's magic.
    GHC-Options: -this-unit-id ghc

    if flag(stage1)
        Include-Dirs: stage1
    else
        if flag(stage2)
            Include-Dirs: stage2
        else
            if flag(stage3)
                Include-Dirs: stage2

