void
Validate_ForeignObjList( ForeignObjList )
  P_ ForeignObjList;
{
  P_ FOptr;

  for(FOptr = ForeignObjList; 
      FOptr != NULL;
      FOptr = ForeignObj_CLOSURE_LINK(FOptr) ) {
    CHECK_ForeignObj_CLOSURE(FOptr);
  }
